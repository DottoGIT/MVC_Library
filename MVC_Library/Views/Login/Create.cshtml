@using MVC_Library.ViewModel
@model UserRegisterVM

<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post" asp-action="Create">
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="UserName" type="text" class="form-control form-control-lg" />
                                    <label asp-for="UserName" class="form-label">Create Username</label>
                                    <span asp-validation-for="UserName"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="FirstName" type="text" class="form-control form-control-lg" />
                                    <label asp-for="FirstName" class="form-label">Your First Name</label>
                                    <span asp-validation-for="FirstName"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="LastName" type="text" class="form-control form-control-lg" />
                                    <label asp-for="LastName" class="form-label">Your Last Name</label>
                                    <span asp-validation-for="LastName"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="Email" type="text" class="form-control form-control-lg" />
                                    <label asp-for="Email" class="form-label">Your Email</label>
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                    <label asp-for="Password" class="form-label">Create Password</label>
                                    <span asp-validation-for="Password"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                                    <label asp-for="ConfirmPassword" class="form-label">Create Password</label>
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-block btn-lg btn-outline-dark">Register</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>